<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:animationCache="false"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btnSortear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="Sortear"
        android:text="Sortear"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="NÃºmeros Sorteados"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/numerosSorteadosTextView"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/numeroSorteadoTextView"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:gravity="center_horizontal"
        android:textSize="80sp" />

    <Button
        android:id="@+id/btnReiniciar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="Reiniciar"
        android:text="Reiniciar Sorteio"
        android:textSize="18sp" />

</LinearLayout>

